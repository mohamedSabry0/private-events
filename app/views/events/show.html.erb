<p>
  <strong>Creator:</strong>
  <%= link_to @event.creator.name, @event.creator %>
</p>
<% if @event.attendees.include?(current_user)%>
  <%= link_to 'Not Attending', attendance_path(@event.attendances.find_by_attendee_id(current_user.id)), method: :delete%>
<%else%>
  <%= link_to 'Attend', attendances_path(event_id:@event.id), method: :post%>
<%end%>
<h1>Attendees</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @event.attendees.each do |attendee| %>
      <tr>
        <td><%= attendee.name %></td>
        <td><%= attendee.username %></td>
        <td><%= link_to 'Show', attendee %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Back', events_path %>
